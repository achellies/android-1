<?xml version="1.0" encoding="UTF-8"?>

<test>
	<rule>
		<action type="SetVariable" var="a">
			<value>
				<num>2</num>
			</value>
		</action>
	</rule>

	<rule>
		<if>
			<lt>
				<num>1</num>
				<var>a</var>
				<num>3</num>
			</lt>
		</if>
		<action type="IncrementVariable" var="a" />
	</rule>

	<rule>
		<if>
			<lt>
				<num>3</num>
				<var>a</var>
				<num>6</num>
			</lt>
		</if>
		<action type="IncrementVariable" var="a" />
	</rule>

</test>
