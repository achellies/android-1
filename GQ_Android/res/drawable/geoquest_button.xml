<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#2F5524"
                android:endColor="#2F5524"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#f0f0f2" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

	<item android:state_enabled="false" >
        <shape>
            <gradient
                android:endColor="#f2f1f0"
                android:startColor="#dfddda"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#f0f0f2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#339a00"
                android:endColor="#2F5524"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#f0f0f2" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>