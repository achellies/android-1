<?xml version="1.0" encoding="UTF-8"?>
<game
	name="VideoPlayTest"
	xmlformat="5"
>
	<mission
		type="NPCTalk"
		id="Intro_3gp"
		image="drawable/tv.jpg"
	>
		<onEnd>
			<rule>
				<action
					type="StartMission"
					id="Video_3gp" />
			</rule>
		</onEnd>
		<dialogitem>Jetzt kommt gleich eine VideoPlay Mission.
		</dialogitem>
		<dialogitem nextbuttontext="Also los!">Hier wird 3gp Format verwendet.
		</dialogitem>
	</mission>
	<mission
		type="VideoPlay"
		id="Video_3gp"
		file="video/jokes.3gp"
	>
		<onEnd>
			<rule>
				<action
					type="StartMission"
					id="Intro_mp4" />
			</rule>
		</onEnd>
	</mission>
	<mission
		type="NPCTalk"
		id="Intro_mp4"
		image="drawable/tv.jpg"
	>
		<onEnd>
			<rule>
				<action
					type="StartMission"
					id="Video_mp4" />
			</rule>
		</onEnd>
		<dialogitem>Jetzt kommt gleich noch eine VideoPlay Mission.
		</dialogitem>
		<dialogitem nextbuttontext="Also los!">Diesmal im mp4 Format.
		</dialogitem>
	</mission>
	<mission
		type="VideoPlay"
		id="Video_mp4"
		file="video/jokes.mp4"
	/>
</game>