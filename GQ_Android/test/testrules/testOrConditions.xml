<?xml version="1.0" encoding="UTF-8"?>

<test>
	<rule>
		<action type="SetVariable" var="a">
			<value>
				<num>1</num>
			</value>
		</action>
		<action type="SetVariable" var="b">
			<value>
				<num>0</num>
			</value>
		</action>
	</rule>

	<rule>
		<if>
			<or>
				<lt>
					<var>a</var>
					<num>1</num>
				</lt>
				<lt>
					<var>b</var>
					<num>1</num>
				</lt>
			</or>
		</if>
		<action type="IncrementVariable" var="a" />
		<action type="IncrementVariable" var="b" />
	</rule>

</test>
